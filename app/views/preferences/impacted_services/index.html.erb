<% content_for :breadcrumb do %>
  <li>Preferences</li>
  <li class="active">Impacted Services</li>
<% end %>

<div class="row">
  <div class="col-md-12">

    <table class="table table-striped table-hover">
      <tbody>
        <% @impacted_services.each do |impacted_service| %>
          <tr>
            <td>
              <%= form_for [:preferences, impacted_service], html: { class: "preferences__form" } do |f| %>
                <%= f.text_field :name, class: "typeahead form-control preferences__input" %>
                <%= f.submit "Update", class: "btn btn-default preferences__button" %> 
                <%= link_to 'Remove', [:preferences, impacted_service], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: 'width: 8em; margin-right: .5em' %>
              <% end %>
            </td>
          </tr>
        <% end %>
        <tr>
          <td>
            <%= form_for [:preferences, ImpactedService.new], html: { class: "preferences__form" } do |f| %>
              <%= f.text_field :name, class: "typeahead form-control preferences__input" %>
              <%= f.submit "Create", class: "btn btn-primary preferences__button--large" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>

  </div> <!-- .col-md-12 -->
</div> <!-- .row -->
